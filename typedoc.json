{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["./src", "./types"],
  "entryPointStrategy": "expand",
  "out": "./docs",
  "plugin": ["typedoc-plugin-markdown"],
  "readme": "./README.md",
  "name": "NodeMod Core",
  "includeVersion": true,
  "excludePrivate": false,
  "excludeProtected": false,
  "excludeExternals": false,
  "hideGenerator": true,
  "validation": {
    "notExported": false,
    "invalidLink": true,
    "notDocumented": false
  },
  "githubPages": false,
  "outputFileStrategy": "modules",
  "fileExtension": ".md",
  "publicPath": "./docs/",
  "textContentMappings": {
    "title": "NodeMod Core Documentation",
    "header.title": "NodeMod Core",
    "header.docs": "Documentation"
  },
  "navigation": {
    "includeCategories": true,
    "includeGroups": true
  },
  "categorizeByGroup": true,
  "sort": ["source-order"],
  "kindSortOrder": [
    "Document",
    "Project",
    "Module",
    "Namespace", 
    "Enum",
    "EnumMember",
    "Class",
    "Interface",
    "TypeAlias",
    "Constructor",
    "Property",
    "Method",
    "Function",
    "Variable"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/dist/**/*",
    "**/node_modules/**/*"
  ]
}